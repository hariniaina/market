<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%=  truncate  strip_tags(product.description), length: 80, escape: false  %></td>
        <td><%= number_to_currency  product.price, unit: "Â£", separator: ",", format: "%n%u" %></td>
        <td><%= image_tag product.image_url, width: 80 %></td>
        <td><%= link_to 'Show', product, class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-outline-success"%></td>
        <td> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info" %>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

